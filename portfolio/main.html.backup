        <div class="form-group">
          <label class="form-label">Date</label>
          <input type="text" class="form-input" id="tf-date" value="${item?.date || ''}" placeholder="e.g. 2023 - Present">
        </div>
        <div class="form-group">
          <label class="form-label">Title</label>
          <input type="text" class="form-input" id="tf-title" value="${item?.title || ''}">
        </div>
        <div class="form-group">
          <label class="form-label">Company/Institution</label>
          <input type="text" class="form-input" id="tf-company" value="${item?.company || ''}">
        </div>
        <div class="form-group">
          <label class="form-label">Description</label>
          <textarea class="form-textarea" id="tf-desc">${item?.description || ''}</textarea>
        </div>
      `;
      adminFormModal.classList.add('active');
      adminFormModal.dataset.type = 'timeline';
    }

    function renderAdminAbout() {
      adminMain.innerHTML = `
        <div class="admin-header">
          <h2 class="admin-page-title">Manage About Info</h2>
        </div>
        <div style="background: var(--bg-card); border: 1px solid var(--border); border-radius: var(--radius-lg); padding: 24px;">
          <form id="about-form">
            <div class="form-group" style="margin-bottom: 20px;">
              <label class="form-label">Bio Text</label>
              <textarea class="form-textarea" id="af-text" style="min-height: 200px;">${store.about.text}</textarea>
            </div>
            <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 20px; margin-bottom: 20px;">
              <div class="form-group">
                <label class="form-label">Location</label>
                <input type="text" class="form-input" id="af-location" value="${store.about.location}">
              </div>
              <div class="form-group">
                <label class="form-label">Email</label>
                <input type="email" class="form-input" id="af-email" value="${store.about.email}">
              </div>
              <div class="form-group">
                <label class="form-label">Experience</label>
                <input type="text" class="form-input" id="af-exp" value="${store.about.experience}">
              </div>
              <div class="form-group">
                <label class="form-label">Status</label>
                <input type="text" class="form-input" id="af-status" value="${store.about.status}">
              </div>
            </div>
            <button type="submit" class="btn btn-primary">Save Changes</button>
          </form>
        </div>
      `;

      document.getElementById('about-form').addEventListener('submit', (e) => {
        e.preventDefault();
        store.about.text = document.getElementById('af-text').value;
        store.about.location = document.getElementById('af-location').value;
        store.about.email = document.getElementById('af-email').value;
        store.about.experience = document.getElementById('af-exp').value;
        store.about.status = document.getElementById('af-status').value;
        renderAbout();
        alert('About info updated!');
      });
    }

    // Admin Form Actions
    document.getElementById('admin-form-close').addEventListener('click', () => adminFormModal.classList.remove('active'));
    document.getElementById('admin-form-cancel').addEventListener('click', () => adminFormModal.classList.remove('active'));

    document.getElementById('admin-form-save').addEventListener('click', () => {
      if (adminFormModal.dataset.type === 'timeline') {
        const data = {
          id: editingItem?.id || Date.now(),
          date: document.getElementById('tf-date').value,
          title: document.getElementById('tf-title').value,
          company: document.getElementById('tf-company').value,
          description: document.getElementById('tf-desc').value
        };
        if (editingItem) {
          const idx = store.timeline.findIndex(t => t.id === editingItem.id);
          store.timeline[idx] = data;
        } else {
          store.timeline.unshift(data);
        }
        renderTimeline();
        renderAdminTimeline();
      } else {
        const data = {
          id: editingItem?.id || Date.now(),
          title: document.getElementById('pf-title').value,
          category: document.getElementById('pf-cat').value,
          description: document.getElementById('pf-desc').value,
          fullDescription: document.getElementById('pf-full').value,
          tech: document.getElementById('pf-tech').value.split(',').map(t => t.trim()),
          image: {
            bg: document.getElementById('pf-bg').value,
            emoji: document.getElementById('pf-emoji').value
          },
          demo: document.getElementById('pf-demo').value,
          repo: document.getElementById('pf-repo').value,
          featured: document.getElementById('pf-featured').checked,
          views: editingItem?.views || 0
        };
        if (editingItem) {
          const idx = store.projects.findIndex(p => p.id === editingItem.id);
          store.projects[idx] = data;
        } else {
          store.projects.push(data);
        }
        renderProjects();
        renderAdminProjects();
      }
      adminFormModal.classList.remove('active');
    });
  </script>
</body>
</html>